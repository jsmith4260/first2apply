{
  "name": "@first2apply/desktop-probe",
  "productName": "First 2 Apply",
  "version": "2.1.0",
  "description": "First 2 Apply - Job Alert App | Instant Notifications for New Job Listings",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build": "tsc --noEmit",
    "prettier": "prettier --check \"src/**/*.{ts,tsx}\"",
    "package": "electron-forge package",
    "make": "cross-env NO_COLOR=1 node --stack_size=2048 ../../node_modules/@electron-forge/cli/dist/electron-forge.js make --arch=x64",
    "release": "npx release-it --ci",
    "test": "jest -c jest.config.ts"
  },
  "keywords": [],
  "author": "BeastX Industries",
  "license": "MIT",
  "release-it": {
    "git": {
      "commitMessage": "chore(release): desktop-v${version}",
      "tagName": "desktop-v${version}",
      "tagAnnotation": "Desktop App Release ${version}"
    },
    "npm": {
      "publish": false,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "cross-env": "^7.0.3",
    "electron": "^38.4.0"
  },
  "dependencies": {
    "@first2apply/core": "workspace:*",
    "@first2apply/ui": "workspace:*",
    "zod": "^3.23.8"
  }
}
